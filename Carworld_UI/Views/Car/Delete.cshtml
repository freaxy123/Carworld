@model Carworld.Models.CarModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this car?</h3>
@if (TempData.ContainsKey("Success"))
{
    <div class="alert-success" role="alert">@TempData["Success"]</div>
}
@if (TempData.ContainsKey("Alert"))
{
    <div class="alert alert-danger" role="alert">@TempData["Alert"]</div>

}
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Horsepower)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Horsepower)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Torque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Torque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Acceleration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Acceleration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Topspeed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Topspeed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarClass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarClass)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fuel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fuel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FuelConsumption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FuelConsumption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MadeByUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MadeByUser)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input asp-for="Id" type="hidden" />
        <input asp-for="Brand" type="hidden" />
        <input asp-for="Model" type="hidden" />
        <input asp-for="Year" type="hidden" />
        <input asp-for="Price" type="hidden" />
        <input asp-for="Horsepower" type="hidden" />
        <input asp-for="Torque" type="hidden" />
        <input asp-for="Acceleration" type="hidden" />
        <input asp-for="Topspeed" type="hidden" />
        <input asp-for="CarClass" type="hidden" />
        <input asp-for="Fuel" type="hidden" />
        <input asp-for="FuelConsumption" type="hidden" />
        <input asp-for="MadeByUser" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details">Cancel</a>
    </form>
</div>
