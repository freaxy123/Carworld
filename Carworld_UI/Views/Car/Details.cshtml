@model Carworld.Models.CarModel 

@{
    ViewData["Title"] = "CarDetails";
}

<h1>Car Details</h1>

@if (TempData.ContainsKey("Success"))
{
    <div class="alert-success" role="alert">@TempData["Success"]</div>
}
@if (TempData.ContainsKey("Alert"))
{
    <div class="alert alert-danger" role="alert">@TempData["Alert"]</div>
}



<div>
    <hr />
    <img src="@("/Images/"+Model.Id+".jpg")" style="width:500px">
    @if (Model.Favorite == true)
    {
        <a asp-controller="User" asp-action="RemoveFromFavorites" asp-route-carId="@Model.Id" class="btn btn-primary">Remove from Favorites</a>
    }
    else
